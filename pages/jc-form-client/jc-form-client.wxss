.client-upload-btn-wrap{
  padding: 10px;
}
.client-upload-btn-wrap .btn{
  width: 50%;
  line-height: 100px;
  display: inline-block;
  background: #0bb20c;
  text-align: center;
  color:#fff;
  border: 3px solid #fff;
  font-weight: bold;
  box-sizing: border-box;
}
.client-list li {
  display: block;
  line-height: 44px;
  border-right: 3px solid #ccc;
  text-align: center;
  font-size: 16px;
}
.client-list li.active{
  border-right: 3px solid #0bb20c;
  color:#0bb20c;
  font-weight: bold;
}
.client-list li.add-button{
  border-right: none;
}
.add-button-icon{
  font-size:20px;
  vertical-align:middle;
}