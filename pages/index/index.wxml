<view wx:if="{{isLogin}}" class="page">
  <view class="welcome">
    程序试运行，欢迎测试
  </view>
  <view wx:if="{{role == 21}}" style="text-align: center; font-size: 18px; line-height: 100px;">
    您好：服务者，请您联系管理维护您的角色
  </view>
  <view wx:else class="index-btn-wrap">
    <view class="new-btn fl" bindtap="goToWsForm" wx:if="{{role != 15}}">
      <view>
        <van-icon name="exchange" style="font-size: 24px" />
      </view>
      <view>
        物损
      </view>
    </view>
    <view class="new-btn fl" bindtap="goToJcForm" wx:if="{{role != 15}}">
      <view>
        <van-icon name="shop" style="font-size: 24px" />
      </view>
      <view>
        家财险
      </view>
    </view>
    <view class="new-btn fl" bindtap="goToCxForm">
      <view>
        <van-icon name="logistics" style="font-size: 24px" />
      </view>
      <view>
        车险
      </view>
    </view>
    <view class="new-btn fl" bindtap="goToKsForm" wx:if="{{role != 15}}">
      <view>
        <van-icon name="certificate" style="font-size: 24px" />
      </view>
      <view>
        开锁
      </view>
    </view>
    <view class="new-btn fl" bindtap="goToGdForm" wx:if="{{role != 15}}">
      <view>
        <van-icon name="exchange-record" style="font-size: 24px" />
      </view>
      <view>
        管道疏通
      </view>
    </view>
    <view class="new-btn fl" bindtap="goToFeedback">
        <view>
            <van-icon name="chat" style="font-size: 24px" />
        </view>
        <view>
            意见反馈
        </view>
    </view>
  </view>
</view>
