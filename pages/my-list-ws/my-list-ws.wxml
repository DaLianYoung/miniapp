<!--index.wxml-->
<view class="page">
  <view class="filter-wrap clearfix">
    <view class="field">
      <view>过滤检索</view>
    </view>
    <view class="field" bind:tap="openLocation">
      <view class="caret">地址</view>
    </view>
    <view class="field">
      <view class="caret" bind:tap="openFilterOne">状态</view>
    </view>
    <view class="field">
      <view class="caret">险种</view>
    </view>
  </view>

  <van-transition name="fade-up" show="{{ isShowFilterOne }}" custom-class="filterBlock">
    <van-radio-group value="{{ filterOne }}" bind:change="filterOneChange">
      <van-cell-group>
        <van-cell title="不限" clickable data-name="0" bind:click="filterItemClick">
          <van-radio name="0" />
        </van-cell>
        <van-cell title="单选框 1" clickable data-name="1" bind:click="filterItemClick">
          <van-radio name="1" />
        </van-cell>
        <van-cell title="单选框 2" clickable data-name="2" bind:click="filterItemClick">
          <van-radio name="2" />
        </van-cell>
      </van-cell-group>
    </van-radio-group>
    <!--<view>-->
      <!--<button hover-class="my-button-hover" class="weui-btn no-radius w50Btn" type="primary" bindtap="">确定</button>-->
      <!--<button class="weui-btn no-radius w50Btn" bindtap="">取消</button>-->
    <!--</view>-->
  </van-transition>

  <!--<view class="card-wrap">-->
    <!--<van-card wx:for="{{dataList}}" wx:key="{{item.id}}" title="工单号：{{item.damageId}}" thumb="{{ imageURL }}" data-id="{{item.damageId}}" bindtap="goToHandleTask">-->
      <!--<view slot="desc">-->
        <!--<view>工单状态：{{item.status}}</view>-->
        <!--<view>客户：{{item.customerUser}}</view>-->
        <!--<view>创建时间：{{item.createTime}}</view>-->
      <!--</view>-->
    <!--</van-card>-->
  <!--</view>-->
  <view class="weui-panel weui-panel_access" wx:for="{{dataList}}" wx:key="{{item.id}}">
    <view class="weui-panel__bd">
      <view class="weui-media-box weui-media-box_text">
        <view class="weui-media-box__title weui-media-box__title_in-text">工单号：{{item.damageId}}</view>
        <view class="weui-media-box__desc">
          <view>工单状态：{{statusMap[item.status]}} | {{item.status}}</view>
          <view>客户：{{item.customerUser}}</view>
          <view>创建时间：{{item.createTime}}</view>
        </view>
      </view>
    </view>
    <view class="weui-panel__ft">
      <view class="weui-cell weui-cell_access weui-cell_link" data-id="{{item.damageId}}" bindtap="goToHandleTask">
        <view class="weui-cell__bd">查看处理</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"></view>
      </view>
    </view>
  </view>

  <van-popup
          show="{{ show }}"
          position="bottom"
          overlay="{{ true }}"
  >
    <van-area area-list="{{ areaList }}" value="110101" bind:confirm="onConfirm" bind:cancel="onCancel"/>
  </van-popup>
</view>